                  "count": 10000
                }

    put:
      description: As a admin, I can update an order so that I modify order details.
        body:
          application/json:
            schema: |
              {
                "$schema": "http://json-schema.org/draft-04/schema#",
                "type": "object",
                "properties": {
                  "provider_id": {
                    "type": "integer"
                  },
                  "product_id": {
